#!/bin/bash
ROOTFS=$(readlink -f $PWD/../rootfs)
echo "Creating rootfs"

# Create rootfs if not already created.
if [ ! -d "$ROOTFS" ]; then
	mkdir -v -p $ROOTFS/{bin,boot,dev,etc,lib,usr,root,tmp}
elif [ ! -d "$ROOTFS/bin" ]; then
	mkdir -v -p $ROOTFS/bin
elif [ ! -d "$ROOTFS/boot" ]; then
	mkdir -v -p $ROOTFS/boot
elif [ ! -d "$ROOTFS/dev" ]; then
	mkdir -v -p $ROOTFS/dev
elif [ ! -d "$ROOTFS/etc" ]; then
	mkdir -v -p $ROOTFS/etc
elif [ ! -d "$ROOTFS/lib" ]; then
	mkdir -v -p $ROOTFS/lib
elif [ ! -d "$ROOTFS/usr" ]; then
	mkdir -v -p $ROOTFS/usr
elif [ ! -d "$ROOTFS/root" ]; then
	mkdir -v -p $ROOTFS/root
elif [ ! -d "$ROOTFS/tmp" ]; then
	mkdir -v -p $ROOTFS/tmp
fi
